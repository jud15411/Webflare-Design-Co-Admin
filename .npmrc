# Save exact version of packages
save-exact=true

# Use package-lock.json
package-lock=true

# Set the default author
init.author.name="Webflare Design Co."
init.author.email="admin@webflaredesignco.com"
init.author.url="https://webflaredesignco.com"

# Set the default license
init.license="UNLICENSED"

# Set the default version
init.version="1.0.0"

# Set the default main file
init.main="main.js"

# Disable package-lock.json for workspaces
package-lock=false
workspaces-update=false

# Configure package manager
auto-install-peers=true

# Configure registry
registry=https://registry.npmjs.org/

# Configure cache
cache=${APPDATA}/npm-cache
prefer-offline=true

# Configure scripts
ignore-scripts=false

# Configure audit
audit=false

# Configure fund
fund=false

# Configure engine-strict
engine-strict=true

# Configure scripts-prepend-node-path
scripts-prepend-node-path=true

# Configure update-notifier
update-notifier=false

# Configure strict-ssl
strict-ssl=true

# Configure fetch-retries
fetch-retries=3
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Configure loglevel
loglevel=error

# Configure color
color=true

# Configure progress
progress=true

# Configure timing
timing=true

# Configure unicode
unicode=true

# Configure depth
depth=0
