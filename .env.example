# Firebase Configuration
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# API Configuration
VITE_API_BASE_URL=https://api.yourdomain.com/v1
VITE_API_KEY=your_api_key_here

# App Configuration
VITE_APP_NAME="Webflare Design Co. Admin"
VITE_APP_ENV=development
VITE_APP_VERSION=1.0.0
VITE_APP_URL=http://localhost:3000

# Authentication
VITE_AUTH_COOKIE_NAME=webflaredesignco_auth
VITE_AUTH_COOKIE_DOMAIN=localhost
VITE_AUTH_COOKIE_SECURE=false
VITE_AUTH_COOKIE_HTTP_ONLY=true
VITE_AUTH_COOKIE_SAME_SITE=lax
VITE_AUTH_COOKIE_MAX_AGE=86400 # 1 day in seconds

# Feature Flags
VITE_FEATURE_REGISTRATION=true
VITE_FEATURE_EMAIL_VERIFICATION=true
VITE_FEATURE_PASSWORD_RESET=true
VITE_FEATURE_ANALYTICS=false

# Logging
VITE_LOG_LEVEL=debug
VITE_SENTRY_DSN=your_sentry_dsn_here

# AWS Configuration (if applicable)
VITE_AWS_REGION=us-east-1
VITE_AWS_ACCESS_KEY_ID=your_aws_access_key_id
VITE_AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
VITE_AWS_S3_BUCKET=your_s3_bucket_name

# Third-party Services
VITE_GOOGLE_ANALYTICS_ID=your_ga_id
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key

# Security
VITE_CSP_REPORT_URI=https://yourdomain.report-uri.com/r/d/csp/enforce

# Performance
VITE_API_TIMEOUT=30000 # 30 seconds
VITE_MAX_UPLOAD_SIZE=5242880 # 5MB

# Local Development
VITE_USE_MOCK_API=false
VITE_MOCK_API_DELAY=300 # 300ms delay for mock API responses

# Testing
VITE_TEST_USER_EMAIL=test@example.com
VITE_TEST_USER_PASSWORD=test1234
